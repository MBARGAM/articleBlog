{% extends 'base.html.twig' %}

{% block title %} Articles{% endblock %}


{% block body %}

    <h1 class="mt-5 text-center">Liste des articles </h1>
    <div>
        {% for articleTab in  articles  %}
            <div class="d-flex justify-content-around  ">
                {% for article in articleTab %}
                    <div  class="border border-grey text-center m-5 bg-white shadow p-3 mb-5 bg-body rounded" >
                        <div  class="bg-dark">
                            <a href="{{ path('currentArticle',{ id : article.id }) }}" class="text-decoration-none"><h6 class="text-white ">Article : {{ article.id }}</h6></a>
                        </div>
                        <div class="border-bottom border-grey">
                           <a href="{{ path('currentArticle',{ id : article.id }) }}"><img id="articleItem"  src="{{ asset('/images/pic.png') }}" title="img"></a>
                        </div>
                        <div class="bg-dark ">
                            <a href="{{ path('currentArticle',{ id : article.id }) }}" class="text-decoration-none"><h3 class="text-white ">{{ article.title|capitalize }} </h3></a>
                        </div>
                        <div >
                            <a href="{{ path('currentArticle',{ id : article.id }) }}" class="text-decoration-none "><h6 class="text-dark ">{{ article. category.name }} </h6></a>
                        </div>

                        <div >
                            <button type="button"  class="btn rounded">â‚¬{{ article.price }}</button>
                        </div>
                        <div>
                            <a href="{{ path('modifyArticle',{ id : article.id})}}" class="btn btn-primary">Modifier</a>
                        </div>


                    </div>
                {% endfor %}
            </div>
        {% endfor %}

    </div>


{% endblock %}